@model Lands.Domain.Match

@{
    ViewBag.Title = "Close";
}

<h2>Close Match</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Match</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MatchId)

    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <td width="200px">
                        <img src="@Url.Content(Model.Local.ImagePath)" alt="Image" style="width:150px;height:150px;max-width: 100%; height: auto;" />
                        <p>
                            <b>@Html.DisplayFor(modelItem => Model.Local.Name)</b>
                        </p>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LocalGoals, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.LocalGoals, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LocalGoals, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </td>
                    <td width="30px">
                    </td>
                    <td width="200px">
                        <img src="@Url.Content(Model.Visitor.ImagePath)" alt="Image" style="width:150px;height:150px;max-width: 100%; height: auto;" />
                        <p>
                            <b>@Html.DisplayFor(modelItem => Model.Visitor.Name)</b>
                        </p>
                        <div class="form-group">
                            @Html.LabelFor(model => model.VisitorGoals, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.VisitorGoals, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VisitorGoals, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Group", "Details", new { id = Model.GroupId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
